    <script>
        console.log("ðŸš€ [Client Debug] Script started");

        try {
            // RÃ©cupÃ©ration sÃ©curisÃ©e des donnÃ©es via le script JSON
            const studentsDataElement = document.getElementById('students-data');
            const students = JSON.parse(studentsDataElement.textContent);

            console.log("âœ… [Client Debug] Students data loaded:", students);
            console.log("ðŸ“Š [Client Debug] Student count:", students ? students.length : 'N/A');

            // Palette officielle
            const colors = [
                '#FFD78B', // Edusign Yellow
                '#1C414D', // Blue Green
                '#B1E1B9'  // Green
            ];

            if (!students || students.length === 0) {
                console.warn("âš ï¸ [Client Debug] No students found or empty array");
                document.getElementById('mainContent').style.display = 'none';
                document.getElementById('noStudents').style.display = 'block';
            } else {
                console.log("ðŸŽ¨ [Client Debug] Initializing Canvas...");
                const canvas = document.getElementById('wheel');
                if (!canvas) console.error("âŒ [Client Debug] Canvas element not found!");

                const ctx = canvas.getContext('2d');
                const spinBtn = document.getElementById('spinBtn');
                const resultDiv = document.getElementById('result');
                const winnerSpan = document.getElementById('winnerName');

                // --- Gestion des langues ---
                let currentLang = 'fr';
                const translations = {
                    fr: {
                        title: "Qui participe ?",
                        subtitle: "Tirage au sort parmi les Ã©lÃ¨ves",
                        spinBtn: "Lancer le tirage",
                        suspense: "ðŸ¥ Suspense...",
                        result: "L'Ã©lÃ¨ve sÃ©lectionnÃ© est :",
                        noStudentsTitle: "Aucun Ã©tudiant trouvÃ©",
                        noStudentsMsg: "Impossible de rÃ©cupÃ©rer la liste des participants pour ce cours."
                    },
                    en: {
                        title: "Who is participating?",
                        subtitle: "Random draw among students",
                        spinBtn: "Spin the wheel",
                        suspense: "ðŸ¥ Suspense...",
                        result: "The selected student is:",
                        noStudentsTitle: "No students found",
                        noStudentsMsg: "Unable to retrieve the participant list for this course."
                    },
                    es: {
                        title: "Â¿QuiÃ©n participa?",
                        subtitle: "Sorteo entre los alumnos",
                        spinBtn: "Girar la rueda",
                        suspense: "ðŸ¥ Suspenso...",
                        result: "El alumno seleccionado es:",
                        noStudentsTitle: "No se encontraron estudiantes",
                        noStudentsMsg: "No se pudo recuperar la lista de participantes para este curso."
                    }
                };

                window.setLanguage = function (lang) {
                    currentLang = lang;
                    const t = translations[lang];

                    // Mise Ã  jour des textes statiques
                    document.getElementById('titleMain').textContent = t.title;
                    document.getElementById('subtitleMain').textContent = t.subtitle;
                    document.getElementById('resultText').textContent = t.result;
                    document.getElementById('noStudentsTitle').textContent = t.noStudentsTitle;
                    document.getElementById('noStudentsMsg').textContent = t.noStudentsMsg;

                    // Mise Ã  jour du bouton seulement s'il ne tourne pas
                    if (!isSpinning) {
                        spinBtn.textContent = t.spinBtn;
                    }

                    // Mise Ã  jour des classes actives des drapeaux
                    document.querySelectorAll('.lang-btn').forEach(btn => {
                        btn.classList.remove('active');
                        if (btn.onclick.toString().includes(`'${lang}'`)) {
                            btn.classList.add('active');
                        }
                    });
                };
                // ---------------------------

                let currentRotation = 0;
                let isSpinning = false;
                let lastTickAngle = 0;

                // Audio Context pour le son de tick
                let audioCtx = null;
                function playTick() {
                    try {
                        if (!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)();
                        const oscillator = audioCtx.createOscillator();
                        const gainNode = audioCtx.createGain();
                        oscillator.connect(gainNode);
                        gainNode.connect(audioCtx.destination);
                        oscillator.frequency.value = 800 + Math.random() * 400;
                        oscillator.type = 'sine';
                        gainNode.gain.setValueAtTime(0.1, audioCtx.currentTime);
                        gainNode.gain.exponentialRampToValueAtTime(0.001, audioCtx.currentTime + 0.05);
                        oscillator.start(audioCtx.currentTime);
                        oscillator.stop(audioCtx.currentTime + 0.05);
                    } catch (e) { /* Son non supportÃ© */ }
                }

                const suspenseMessage = document.getElementById('suspenseMessage');

                function drawWheel() {
                    console.log("ðŸ–Œï¸ [Client Debug] Drawing wheel...");
                    const centerX = canvas.width / 2;
                    const centerY = canvas.height / 2;
                    const radius = Math.min(centerX, centerY) - 15; // Marge interne
                    const segmentAngle = (2 * Math.PI) / students.length;

                    ctx.clearRect(0, 0, canvas.width, canvas.height);

                    students.forEach((student, index) => {
                        const startAngle = index * segmentAngle + currentRotation;
                        const endAngle = startAngle + segmentAngle;

                        // 1. Dessin du segment
                        ctx.beginPath();
                        ctx.moveTo(centerX, centerY);
                        ctx.arc(centerX, centerY, radius, startAngle, endAngle);
                        ctx.closePath();

                        // Choix de la couleur (boucle sur les 3 couleurs)
                        const color = colors[index % colors.length];
                        ctx.fillStyle = color;
                        ctx.fill();

                        // Bordure blanche entre les segments pour la propretÃ©
                        ctx.strokeStyle = '#FFFFFF';
                        ctx.lineWidth = 4;
                        ctx.stroke();

                        // 2. Texte
                        ctx.save();
                        ctx.translate(centerX, centerY);
                        ctx.rotate(startAngle + segmentAngle / 2);
                        ctx.textAlign = 'right';

                        // Logique de couleur de texte : 
                        // Si le fond est foncÃ© (#1C414D), texte blanc. Sinon texte foncÃ©.
                        if (color === '#1C414D') {
                            ctx.fillStyle = '#FFFFFF';
                        } else {
                            ctx.fillStyle = '#1C414D';
                        }

                        ctx.font = '600 14px Inter'; // Police Inter Semi-Bold

                        // Tronquer si trop long
                        let displayName = student;
                        if (displayName.length > 16) displayName = displayName.substring(0, 14) + '...';

                        ctx.fillText(displayName, radius - 25, 5);
                        ctx.restore();
                    });
                    console.log("âœ… [Client Debug] Wheel drawn successfully");
                }

                function spin() {
                    if (isSpinning) return;
                    console.log("ðŸŽ° [Client Debug] Spin started");
                    isSpinning = true;
                    spinBtn.disabled = true;
                    resultDiv.style.opacity = '0';
                    spinBtn.textContent = translations[currentLang].suspense;
                    spinBtn.classList.add('spinning');

                    // ParamÃ¨tres de l'animation
                    const spins = 5 + Math.random() * 5;
                    const targetAngle = spins * 2 * Math.PI + Math.random() * 2 * Math.PI;
                    const startRotation = currentRotation;
                    const startTime = performance.now();
                    const duration = 4500; // Un peu plus lent pour le suspense

                    function animate(currentTime) {
                        const elapsed = currentTime - startTime;
                        const progress = Math.min(elapsed / duration, 1);

                        // Easing cubic out pour un arrÃªt en douceur
                        const easeOut = 1 - Math.pow(1 - progress, 3);

                        currentRotation = startRotation + targetAngle * easeOut;
                        drawWheel();

                        // Jouer un tick Ã  chaque segment
                        const segmentAngle = (2 * Math.PI) / students.length;
                        const currentSegment = Math.floor(currentRotation / segmentAngle);
                        if (currentSegment !== lastTickAngle) {
                            playTick();
                            lastTickAngle = currentSegment;
                        }

                        if (progress < 1) {
                            requestAnimationFrame(animate);
                        } else {
                            isSpinning = false;
                            spinBtn.disabled = false;
                            spinBtn.textContent = translations[currentLang].spinBtn;
                            spinBtn.classList.remove('spinning');
                            displayWinner();
                        }
                    }
                    requestAnimationFrame(animate);
                }

                function displayWinner() {
                    console.log("ðŸ† [Client Debug] Displaying winner");
                    const segmentAngle = (2 * Math.PI) / students.length;
                    // Ajustement mathÃ©matique car le pointeur est en haut (-PI/2)
                    const normalizedRotation = ((-currentRotation - Math.PI / 2) % (2 * Math.PI) + 2 * Math.PI) % (2 * Math.PI);
                    const winnerIndex = Math.floor(normalizedRotation / segmentAngle);

                    // SÃ©curitÃ© index
                    const safeIndex = Math.max(0, Math.min(winnerIndex, students.length - 1));
                    const winner = students[safeIndex];
                    const winnerColor = colors[safeIndex % colors.length];

                    // Afficher le gagnant dans le cercle central
                    const centerCircle = document.getElementById('centerCircle');
                    const centerIcon = document.getElementById('centerIcon');
                    const winnerDisplay = document.getElementById('winnerDisplay');

                    centerCircle.classList.add('winner');
                    centerCircle.style.background = winnerColor;
                    // Texte blanc si fond foncÃ©, sinon bleu-vert
                    centerCircle.style.color = (winnerColor === '#1C414D') ? '#FFFFFF' : '#1C414D';
                    centerIcon.style.display = 'none';
                    winnerDisplay.style.display = 'block';
                    winnerDisplay.textContent = winner;

                    winnerSpan.textContent = winner;
                    resultDiv.style.opacity = '1';
                }

                spinBtn.addEventListener('click', spin);

                // Clic sur le cercle central pour tourner aussi
                document.getElementById('centerCircle').addEventListener('click', spin);

                // Premier dessin
                drawWheel();
            }
        } catch (globalError) {
            console.error("âŒ [Client Debug] CRITICAL ERROR:", globalError);
            alert("Erreur critique JS: " + globalError.message);
        }
    </script>
