<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sélecteur Aléatoire Edusign</title>
    <!-- Import de la police officielle Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <style>
        :root {
            /* Palette officielle Edusign */
            --edusign-yellow: #FFD78B;
            --edusign-blue-green: #1C414D;
            --edusign-green: #B1E1B9;
            --bg-color: #F9F9F9;
            --text-color: #1C414D;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            overflow: hidden;
            /* Empêche le scroll pendant l'animation */
        }

        h1 {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 5px;
            color: var(--edusign-blue-green);
            text-align: center;
        }

        p.subtitle {
            font-weight: 400;
            color: #666;
            margin-bottom: 25px;
            font-size: 0.95rem;
            text-align: center;
        }

        .wheel-wrapper {
            position: relative;
            /* Ombre douce et pro */
            filter: drop-shadow(0 10px 25px rgba(28, 65, 77, 0.15));
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        canvas {
            border-radius: 50%;
            background: white;
            /* Bordure fine blanche pour détacher du fond */
            border: 8px solid white;
        }

        /* Le pointeur (Triangle inversé) */
        .pointer {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 25px solid transparent;
            border-right: 25px solid transparent;
            border-top: 50px solid var(--edusign-blue-green);
            z-index: 10;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
        }

        /* Le bouton central (étoile) */
        .center-circle {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 50px;
            height: 50px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            z-index: 5;
        }

        /* Bouton d'action */
        #spinBtn {
            background-color: var(--edusign-blue-green);
            color: white;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            font-size: 1rem;
            padding: 14px 40px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 4px 6px rgba(28, 65, 77, 0.2);
            letter-spacing: 0.5px;
        }

        #spinBtn:hover:not(:disabled) {
            transform: translateY(-2px);
            background-color: #14303A;
            box-shadow: 0 6px 12px rgba(28, 65, 77, 0.3);
        }

        #spinBtn:disabled {
            background-color: #E0E0E0;
            color: #A0A0A0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        /* Résultat */
        #result-container {
            margin-top: 20px;
            height: 40px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #result {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--edusign-blue-green);
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.5s ease;
        }

        #result.show {
            opacity: 1;
            transform: translateY(0);
        }

        /* État vide */
        .no-students {
            text-align: center;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            max-width: 400px;
        }
    </style>
</head>

<body>

    <div id="mainContent">
        <h1>Qui participe ?</h1>
        <p class="subtitle">Tirage au sort parmi les présents</p>

        <div class="wheel-wrapper">
            <div class="pointer"></div>
            <canvas id="wheel" width="380" height="380"></canvas>

            <div class="center-circle">
                <!-- Étoile SVG simple (style Edusign) -->
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#1C414D" stroke-width="2"
                    stroke-linecap="round" stroke-linejoin="round">
                    <polygon
                        points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2">
                    </polygon>
                </svg>
            </div>
        </div>

        <button id="spinBtn">Lancer le tirage</button>

        <div id="result-container">
            <div id="result">
                Gagnant : <span id="winnerName" style="color: #D35400;"></span>
            </div>
        </div>
    </div>

    <div id="noStudents" class="no-students" style="display: none;">
        <h2 style="margin-bottom: 10px; color: var(--edusign-blue-green);">Aucun étudiant trouvé</h2>
        <p style="color: #666;">Impossible de récupérer la liste des participants pour ce cours.</p>
    </div>

    <script>
        // Récupération sécurisée des données EJS
        // On utilise JSON.stringify côté serveur pour être sûr du format
        const students = <% - students %>;

        // Palette officielle
        const colors = [
            '#FFD78B', // Edusign Yellow
            '#1C414D', // Blue Green
            '#B1E1B9'  // Green
        ];

        if (!students || students.length === 0) {
            document.getElementById('mainContent').style.display = 'none';
            document.getElementById('noStudents').style.display = 'block';
        } else {
            const canvas = document.getElementById('wheel');
            const ctx = canvas.getContext('2d');
            const spinBtn = document.getElementById('spinBtn');
            const resultDiv = document.getElementById('result');
            const winnerSpan = document.getElementById('winnerName');

            let currentRotation = 0;
            let isSpinning = false;

            function drawWheel() {
                const centerX = canvas.width / 2;
                const centerY = canvas.height / 2;
                const radius = Math.min(centerX, centerY) - 10; // Marge interne
                const segmentAngle = (2 * Math.PI) / students.length;

                ctx.clearRect(0, 0, canvas.width, canvas.height);

                students.forEach((student, index) => {
                    const startAngle = index * segmentAngle + currentRotation;
                    const endAngle = startAngle + segmentAngle;

                    // 1. Dessin du segment
                    ctx.beginPath();
                    ctx.moveTo(centerX, centerY);
                    ctx.arc(centerX, centerY, radius, startAngle, endAngle);
                    ctx.closePath();

                    // Choix de la couleur (boucle sur les 3 couleurs)
                    const color = colors[index % colors.length];
                    ctx.fillStyle = color;
                    ctx.fill();

                    // Bordure blanche entre les segments
                    ctx.strokeStyle = '#FFFFFF';
                    ctx.lineWidth = 4;
                    ctx.stroke();

                    // 2. Texte
                    ctx.save();
                    ctx.translate(centerX, centerY);
                    ctx.rotate(startAngle + segmentAngle / 2);
                    ctx.textAlign = 'right';

                    // Contraste intelligent
                    if (color === '#1C414D') {
                        ctx.fillStyle = '#FFFFFF'; // Blanc sur fond foncé
                    } else {
                        ctx.fillStyle = '#1C414D'; // Foncé sur fond clair
                    }

                    ctx.font = '600 14px Inter';

                    // Tronquer si trop long
                    let displayName = student;
                    if (displayName.length > 16) displayName = displayName.substring(0, 14) + '...';

                    ctx.fillText(displayName, radius - 25, 5);
                    ctx.restore();
                });
            }

            function spin() {
                if (isSpinning) return;

                isSpinning = true;
                spinBtn.disabled = true;
                resultDiv.classList.remove('show');

                // Paramètres de l'animation
                const spins = 5 + Math.random() * 5; // Entre 5 et 10 tours
                const targetAngle = spins * 2 * Math.PI + Math.random() * 2 * Math.PI;
                const startRotation = currentRotation;
                const startTime = performance.now();
                const duration = 4500; // 4.5 secondes

                function animate(currentTime) {
                    const elapsed = currentTime - startTime;
                    const progress = Math.min(elapsed / duration, 1);

                    // Easing cubic out
                    const easeOut = 1 - Math.pow(1 - progress, 3);

                    currentRotation = startRotation + targetAngle * easeOut;
                    drawWheel();

                    if (progress < 1) {
                        requestAnimationFrame(animate);
                    } else {
                        isSpinning = false;
                        spinBtn.disabled = false;
                        displayWinner();
                    }
                }
                requestAnimationFrame(animate);
            }

            function displayWinner() {
                const segmentAngle = (2 * Math.PI) / students.length;
                // Ajustement mathématique car le pointeur est en haut (-PI/2)
                const normalizedRotation = ((-currentRotation - Math.PI / 2) % (2 * Math.PI) + 2 * Math.PI) % (2 * Math.PI);
                const winnerIndex = Math.floor(normalizedRotation / segmentAngle);

                // Sécurité index
                const safeIndex = Math.max(0, Math.min(winnerIndex, students.length - 1));

                winnerSpan.textContent = students[safeIndex];
                resultDiv.classList.add('show');

                // Confettis aux couleurs de la marque
                confetti({
                    particleCount: 150,
                    spread: 70,
                    origin: { y: 0.6 },
                    colors: ['#FFD78B', '#1C414D', '#B1E1B9']
                });
            }

            spinBtn.addEventListener('click', spin);

            // Premier dessin
            drawWheel();
        }
    </script>
</body>

</html>