    <style>
        :root {
            /* Palette officielle Edusign */
            --edusign-yellow: #FFD78B;
            --edusign-blue-green: #1C414D;
            --edusign-green: #B1E1B9;
            --bg-color: #FFFFFF;
            /* Fond blanc */
            --text-color: #1C414D;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 10px;
            overflow: auto;
        }

        h1 {
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 5px;
            color: var(--edusign-blue-green);
            text-align: center;
        }

        p.subtitle {
            font-weight: 400;
            color: #666;
            margin-bottom: 25px;
            font-size: 0.95rem;
            text-align: center;
        }

        .wheel-wrapper {
            position: relative;
            /* Ombre douce et pro */
            filter: drop-shadow(0 10px 25px rgba(28, 65, 77, 0.15));
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        canvas {
            border-radius: 50%;
            background: white;
            /* Bordure fine aux couleurs de la marque */
            border: 8px solid white;
        }

        /* Le pointeur (Triangle fun avec gradient) */
        .pointer {
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--edusign-yellow) 0%, var(--edusign-green) 50%, var(--edusign-blue-green) 100%);
            clip-path: polygon(50% 100%, 0% 0%, 100% 0%);
            z-index: 10;
            filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.25));
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                transform: translateX(-50%) scale(1);
            }

            50% {
                transform: translateX(-50%) scale(1.1);
            }
        }

        /* Le bouton central */
        .center-circle {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 70px;
            height: 70px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            z-index: 5;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .center-circle:hover {
            transform: translate(-50%, -50%) scale(1.1);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

        .center-circle.winner {
            width: 100px;
            height: 100px;
            font-weight: 700;
            font-size: 0.75rem;
            text-align: center;
            padding: 8px;
            line-height: 1.2;
            overflow: hidden;
            word-break: break-word;
            animation: tadaWinner 0.6s ease-out;
        }

        @keyframes tadaWinner {
            0% {
                transform: translate(-50%, -50%) scale(0.5);
                opacity: 0;
            }

            50% {
                transform: translate(-50%, -50%) scale(1.15);
            }

            70% {
                transform: translate(-50%, -50%) scale(0.95);
            }

            100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 1;
            }
        }

        /* Message suspense */
        #suspenseMessage {
            display: none;
        }

        #spinBtn.spinning {
            background: linear-gradient(90deg, var(--edusign-yellow), var(--edusign-green), var(--edusign-yellow));
            background-size: 200% 100%;
            animation: shimmer 1s ease-in-out infinite;
            color: var(--edusign-blue-green);
        }

        @keyframes shimmer {
            0% {
                background-position: 200% 0;
            }

            100% {
                background-position: -200% 0;
            }
        }



        .center-circle img {
            width: 30px;
            height: auto;
        }

        /* Bouton d'action */
        #spinBtn {
            display: block;
            margin: 0 auto;
            background-color: var(--edusign-blue-green);
            color: white;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            font-size: 1rem;
            padding: 14px 40px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 4px 6px rgba(28, 65, 77, 0.2);
            letter-spacing: 0.5px;
        }

        #spinBtn:hover:not(:disabled) {
            transform: translateY(-2px);
            background-color: #14303A;
            /* Version un peu plus sombre du Blue Green */
            box-shadow: 0 6px 12px rgba(28, 65, 77, 0.3);
        }

        #spinBtn:disabled {
            background-color: #E0E0E0;
            color: #A0A0A0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }



        /* Ã‰tat vide */
        .no-students {
            text-align: center;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            max-width: 400px;
        }

        /* Langue Switcher */
        .lang-switcher {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            gap: 10px;
            z-index: 100;
        }

        .lang-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            opacity: 0.5;
            transition: opacity 0.2s, transform 0.2s;
        }

        .lang-btn:hover,
        .lang-btn.active {
            opacity: 1;
            transform: scale(1.1);
        }
    </style>
</head>

